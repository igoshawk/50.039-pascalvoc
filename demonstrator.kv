#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import FileChooser kivy.uix.filechooser.FileChooser

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    AnotherScreen:

<MainScreen>:
    name: 'main'

    BoxLayout:
        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                size_hint_y: None
                height: 50

                Button:
                    text: 'Icon View'
                    on_press: fc.view_mode = 'icon'
                Button:
                    text: 'List View'
                    on_press: fc.view_mode = 'list'

            FileChooser:
                id: fc
                FileChooserIconLayout
                FileChooserListLayout

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 150
                
                Button:
                    font_size: 18
                    text: 'Predict on image'
                    on_release: root.selected(fc.selection)
                Button:
                    font_size: 18
                    text: 'View top predictions of each class'
                    on_release: app.root.current='other'

        BoxLayout:
            orientation: 'vertical'

            Image:
                id: img
                source: ''

            BoxLayout:
                height: 50
                Label:
                    id: pred
                    text:'The prediction of selected image will be displayed here'
                    font_size: 30



